{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\inetpub\\logs\\IdentityServer\\log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "IdentityServer": {
    "ServerUri": "https://localhost:44353/",
    "Hosts": [ "http://localhost", "https://localhost", "http://myserver.com", "https://myserver.com", "https://oidcdebugger.com" ],
    "Groups": [
      "MyServer .*",
      "MyServer Admin"
    ]
  }
}
